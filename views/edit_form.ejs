<section class="form-page" >
    <section class="form-container">
        <div class="title"></div>
            <p>Update post</p>
        </div>
        <form action="/posts/<%= post.id%>?_method=put" method ="post">
        <div class="user-details">

            <div class="input-box">
                <label class="details" for="">title</label>
                <input type="text" name ="title" value="<%= post.title %>">
            </div>
            <div class="input-box">
                <label class="details" for="">image url</label>
                <input type="text" name ="image_url" value="<%= post.image_url%>">
            </div>

            <div class="input-box">
                <label class="details" for="">description</label>
                <textarea name="description" id=""><%= post.description%></textarea>
            </div>
            <div class="input-box"></div>
                <label class="details" for="category">I joined FetchMate to:</label>
                <select id="category" name="category" >
                    <option value="socialize my dog" <%= post.category === "socialize my dog" ? "selected" : "" %> >Socialize my dog</option>
                    <option value="meet other pet owners" <%= post.category === "meet other pet owners" ? "selected" : "" %> >Meet other pet owners</option>
                    <option value="breeding opportunities" <%= post.category === "breeding opportunities" ? "selected" : "" %> >Breeding opportunities</option>
                    <option value="vet hook-ups" <%= post.category === "vet hook-ups" ? "selected" : "" %> >Vet hook-ups</option>
                    <option value="advertise events" <%= post.category === "advertise events" ? "selected" : "" %> >Advertise pet events</option>
                    <option value="show off/check out parks" <%= post.category === "show off/check out parks" ? "selected" : "" %> >Show off/check out dog parks</option>
                    <option value="shout out/ check out local pet shops" <%= post.category === "shout out/ check out local pet shops" ? "selected" : "" %> >Shout out/check out local Pet shops</option>
                    <option value="all of the cool features" <%= post.category === "all of the cool features" ? "selected" : "" %> >All of the cool features</option>
                </select>
            </div>
            <button class="form-btn">update</button>
        </div>
    </section>
</section>