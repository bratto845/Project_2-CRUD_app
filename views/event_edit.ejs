<section class="form-page" >
    <section class="form-container">
        <div class="title">
            <p>Edit your Event</p>
        </div>
        <form action="/events/<%= event.id%>?_method=put" method ="post">
            <div class="user-details">
                <div class="input-box">
                    <label class="details" for="">Title</label>
                    <input type="text" name ="event_title">
                </div>
                <div class="input-box">
                    <label class="details" for="">Image url</label>
                    <input type="text" name ="image_url">
                </div>
                <div class="input-box">
                    <label class="details" for="">Location</label>
                    <input type="text" name ="location">
                </div>
                <div class="input-box">
                    <label class="details" for="">Description</label>
                    <textarea name="description" id=""></textarea>
                </div>
                <div class="input-box">
                    <label class="details" for="category">My post's objective is to:</label>
                    <select name="category" id="category">
                        <option value="socialize">Socialize my dog</option>
                        <option value="meet_owners">Meet other pet owners</option>
                        <option value="puppies">Breeding opportunities</option>
                        <option value="vet">Vet hook-ups</option>
                        <option value="events">Advertise pet events</option>
                        <option value="parks">Show off dog parks</option>
                        <option value="shops">Shout out local Pet shops</option>
                    </select>
                </div>
                <button class="form-btn">Update</button>
            </div>
        </form>
    </section>
</section>